<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_email_edit_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/editText"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="78dp" />

    <EditText
        android:id="@+id/editText2"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="78dp" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="31dp"
        android:onClick="signUp"
        android:text="Sign Up"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_butoon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="372dp" />

    <Button
        android:id="@+id/sign_up_butoon"
        android:layout_width="158dp"
        android:layout_height="108dp"
        android:onClick="signIn"
        android:text="Sign Ä±n"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="372dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="541dp"
        android:layout_height="130dp"
        android:ems="10"
        android:hint="enter e-mail"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/user_password_edit_text"
        android:layout_width="553dp"
        android:layout_height="137dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="174dp" />
</androidx.constraintlayout.widget.ConstraintLayout>